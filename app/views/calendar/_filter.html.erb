<%= javascript_include_tag "event_calendar.js" %>

<h1>Kalendorius</h1>
<div style="float:left;"> 
  <%= link_to_if(can?(:manage, Event), 'Sukurti įvykius', events_path) %>
</div>


<div style="float:right;"><%= 'Pasirinkite datą' %>
  <%= calendar_date_select_tag "sday",
    @start_date_range,
    :year_range => 10.years.ago..0.years.ago,
    :onchange => "$('year_value').value = (this.calendar_date_select.selected_date.getFullYear());$('month_value').value = (this.calendar_date_select.selected_date.getMonth()+1);$('day_value').value = (this.calendar_date_select.selected_date.getDay());"
%>

  <%= button_to_function 'Žiūrėti',  "location.href='#{url_for(:action => 'index')}/'+$('year_value').value+'/'+$('month_value').value+'/'+$('day_value').value"  %>
</div>
<br />

<div>
   <%= button_to "Ataskaitos", url_for(:action => 'acounting') %>
</div>