<h5>Ataskaitos</h5>

<%= form_tag :action => :acounting do %>
  <table>
    <tr>
      <td style="width:33%">
        Vartotojai
      </td>
      <td>
        Kompanijos
      </td>
      <td>
        Data
      </td>

    </tr>
    <tr>
      <td>
        <%=  select_tag "Vartotojai", options_from_collection_for_select(@users, "id", "name"), {:multiple=>true, :style=>"width:200px"}  %>
      </td>
      <td>
        <%=  select_tag "Kompanijos", options_from_collection_for_select(@companies, "id", "name"), {:multiple=>true, :style=>"width:200px"}  %>
      </td>
      <td>
        
        <%= 'Nuo' %>
        <%= calendar_date_select_tag "start_d",
          @start_date_range,
          :format => @format,
          :year_range => 10.years.ago..0.years.ago,
          :default_time => Time.now,
         # :onchange => "$$(start_d) = (this.calendar_date_select.selected_date);"
      %>
        <br />
        <%= 'Iki' %>
        <%= calendar_date_select_tag "end_d",
          @start_date_range,
          :year_range => 10.years.ago..0.years.ago,
          :default_time => Time.now,
          :format => @format,
         # :onchange => "$('end_d').value = (this.calendar_date_select.selected_date.getFullYear());$('month_value').value = (this.calendar_date_select.selected_date.getMonth()+1);$('day_value').value = (this.calendar_date_select.selected_date.getDay());"
      %>
      </td>
    </tr>

  </table>

  <div style="width: 100%; vertical-align: middle; text-align: center;"><%= submit_tag 'Generuoti' %></div>

<% end %>

<%= render :partial => 'acount_list' %>
